<%- include ('partials/header.ejs')%>

<body>
  <%- include ('partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <h3><%= pergunta.descricao %></h3>
        <hr>
      <form method="post" action="/salvarResposta">
        <h2>Responda</h2>
        <label>Resposta:</label>
        <textarea placeholder="Digite sua Resposta" class="form-control" name="corpo"></textarea> <br>
        <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
        <button type="submit" class="btn btn-success">Enviar</button>
      </form> <hr>
      <div id="container-resposta">
        <div id="respostasRecentes"> 
          <h1>Respostas Recentes</h1>
        </div> 
      </div>
      
        <% respostas.forEach((resposta) => { %>
          <div class="card text-bg-secondary mb-3">
            <div class="card-body">
              <h5><%= resposta.corpo%></h5>
            </div>
          </div>
        <%})%>
      
  </div>
</body>
<%- include ('partials/footer')%>  